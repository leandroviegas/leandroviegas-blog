{
  "compilerOptions": {
    "lib": [
      "es2016",
      "dom"
    ],
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": false,
    "strictPropertyInitialization": false,
    "moduleResolution": "node",
    "typeRoots": [
      "./src/@types"
    ],
    "types": [
      "node"
    ],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "@Controllers/*": [
        "Controllers/*"
      ],
      "@Models/*": [
        "Models/*"
      ],
      "@Entity/*": [
        "Entity/*"
      ],
      "@Schemas/*": [
        "Schemas/*"
      ],
      "@services/*": [
        "services/*"
      ],
      "@middlewares/*": [
        "middlewares/*"
      ],
      "@utils/*": [
        "utils/*"
      ],
    }
  }
}